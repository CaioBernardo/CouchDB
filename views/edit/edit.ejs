<!-- edit.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Record</title>
</head>

<body>
  <h1>Edit Record</h1>
  <form method="POST" action="/edit/<%= id %>">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= name %>">
    <br>

    <label for="occupation">Occupation:</label>
    <input type="text" id="occupation" name="occupation" value="<%= occupation %>">
    <br>

    <label for="street">Street:</label>
    <input type="text" id="street" name="street" value="<%= street %>">
    <br>

    <label for="neighborhood">Neighborhood:</label>
    <input type="text" id="neighborhood" name="neighborhood" value="<%= neighborhood %>">
    <br>

    <label for="city">City:</label>
    <input type="text" id="city" name="city" value="<%= city %>">
    <br>

    <label for="state">State:</label>
    <input type="text" id="state" name="state" value="<%= state %>">
    <br>

    <label for="salary">Salary:</label>
    <input type="number" id="salary" name="salary" value="<%= salary %>">
    <br>

    <input type="submit" value="Save">
  </form>
</body>

</html>